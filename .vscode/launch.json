{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mobile(API)",
      "program": "${workspaceFolder}/src/server.ts",
      "runtimeArgs": ["watch"],
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/tsx",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "env": {
        "NODE_ENV": "development",
        "PORT": "3001"
      }
    }
  ]
}
